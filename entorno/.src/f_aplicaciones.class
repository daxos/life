Public Sub IconView1_Click()

   Dim titulos As Boolean
 Dim video As String 
 
   If Not IsNull(IconView1.Current) Then
    Select Case IconView1.Current.Key
     Case 1
     f_navegador.Show
     IconView1.UnselectAll
     f_aplicaciones.Hide
     Case 2
       f_editor.Show
       IconView1.UnselectAll
       f_aplicaciones.Hide
       
      Case 3
       f_correo.Show
       IconView1.UnselectAll
       f_aplicaciones.Hide
       
      Case 4
       f_tv.Show
       IconView1.UnselectAll
       f_aplicaciones.Hide
       
       Case 5
       f_musica.Show
       IconView1.UnselectAll
       f_aplicaciones.Hide
       
       Case 6
       If f_video.Visible = False Then
       f_video.Show
       IconView1.UnselectAll
       f_aplicaciones.Hide
       Else
         f_video.Close
         f_aplicaciones.Close
       Endif  
       
       Case 7
      ' f_galeria.Show
      Shell "eog"
       IconView1.UnselectAll
       f_aplicaciones.Hide
       
       Case 8
       f_camfondo.Show
       IconView1.UnselectAll
       f_aplicaciones.Hide
       
       Case 9
       f_navegador.Show
       f_navegador.WebView1.URL = "http://kiosko.net/"
       IconView1.UnselectAll
       f_aplicaciones.Hide
     
    
   End Select
        Endif

End

